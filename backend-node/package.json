{
    "name": "eventor-api-node",
    "version": "1.0.0",
    "description": "Eventor API - Node.js/Express backend",
    "main": "src/index.js",
    "scripts": {
        "start": "node src/index.js",
        "start:prod": "npx prisma db push --accept-data-loss && npx prisma generate && npm run prisma:seed && node src/index.js",
        "dev": "nodemon src/index.js",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:deploy": "prisma migrate deploy",
        "prisma:seed": "node prisma/seed.js"
    },
    "keywords": [
        "eventor",
        "events",
        "api",
        "express"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "express": "^4.18.2",
        "prisma": "^5.7.1",
        "@prisma/client": "^5.7.1",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express-validator": "^7.0.1",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0"
    },
    "devDependencies": {
        "nodemon": "^3.0.2"
    }
}